# Twitter/X API Credentials
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret_here
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# YouTube API
YOUTUBE_API_KEY=your_youtube_api_key_here

# OpenAI API (for embeddings and processing)
OPENAI_API_KEY=your_openai_api_key_here

# Vector Database (choose one or multiple)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment_here
WEAVIATE_URL=your_weaviate_url_here
WEAVIATE_API_KEY=your_weaviate_api_key_here

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/content_scraper
# Or for SQLite (development)
# DATABASE_URL=sqlite:///data/content_scraper.db

# Scraping Configuration
USER_AGENT=ContentScraperBot/1.0 (+https://yourwebsite.com/bot)
REQUEST_TIMEOUT=30
MAX_RETRIES=3
RATE_LIMIT_CALLS=10
RATE_LIMIT_PERIOD=60

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/scraper.log

# Processing
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
EMBEDDING_MODEL=text-embedding-ada-002
MAX_WORKERS=5

# Content Filtering
MIN_AUTHENTICITY_SCORE=75
MIN_CONTENT_LENGTH=100
